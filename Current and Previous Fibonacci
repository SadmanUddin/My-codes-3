using System;
namespace sadman
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int x = 0;
            int a = 0;
            int b = 1;
            int n = Convert.ToInt32(Console.ReadLine());

            for(int i = 2; i<=n; i++)
            {
                x=a+b;
                a=b;
                b=x;    
            }
            Console.WriteLine($"Previous: {a} and current: {b}");
        }
    }
}
